  <div class="container">
    <h1>Clue #1</h1>
    <p>Welcome to your first clue! ðŸŽ‰  
    Look carefully â€” a secret hint is hidden on this page.  
    Click the heart to reveal your next step!</p>
    
    <img src="https://i.imgur.com/1j7Gf1A.png" id="secretImage" alt="Hidden Heart">
    
    <a class="button" id="nextClue" href="#" style="display:none;">Reveal Clue #2</a>
  </div>

  <script>
    // Secret puzzle: click anywhere on container 3 times to reveal image
    let clicks = 0;
    const container = document.querySelector('.container');
    const secretImage = document.getElementById('secretImage');
    const nextClue = document.getElementById('nextClue');

    container.addEventListener('click', () => {
      clicks++;
      if(clicks === 3) {
        secretImage.style.display = 'block';
      }
    });

    // Clicking the hidden heart shows the next clue button
    secretImage.addEventListener('click', () => {
      nextClue.style.display = 'inline-block';
    });
  </script>
